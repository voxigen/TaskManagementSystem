<Window x:Class="TaskManagementSystem.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Генерация отчетов" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#2c3e50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="📊 Генерация отчетов" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Создание аналитических отчетов по системе" 
                          FontSize="11" Foreground="#bdc3c7" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" 
                    BorderBrush="#bdc3c7" BorderThickness="1" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Тип отчета" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,15"/>

                    <StackPanel>
                        <RadioButton x:Name="ReportTypeCourses" 
                                   Content="📚 Отчет по курсам" 
                                   GroupName="ReportType" 
                                   IsChecked="True" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"
                                   Checked="ReportType_Checked"/>
                        <RadioButton x:Name="ReportTypeTasks" 
                                   Content="📝 Отчет по заданиям" 
                                   GroupName="ReportType" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"
                                   Checked="ReportType_Checked"/>
                        <RadioButton x:Name="ReportTypeUsers" 
                                   Content="👥 Отчет по пользователям" 
                                   GroupName="ReportType" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"
                                   Checked="ReportType_Checked"/>
                        <RadioButton x:Name="ReportTypeSubmissions" 
                                   Content="📨 Отчет по отправкам" 
                                   GroupName="ReportType" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"
                                   Checked="ReportType_Checked"/>
                    </StackPanel>

                    <Separator Background="#bdc3c7" Margin="0,10,0,10"/>

                    <TextBlock Text="Период" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,10"/>

                    <StackPanel>
                        <RadioButton x:Name="PeriodAll" 
                                   Content="За все время" 
                                   GroupName="Period" 
                                   IsChecked="True" 
                                   Margin="0,0,0,5"/>
                        <RadioButton x:Name="PeriodMonth" 
                                   Content="За последний месяц" 
                                   GroupName="Period" 
                                   Margin="0,0,0,5"/>
                        <RadioButton x:Name="PeriodWeek" 
                                   Content="За последнюю неделю" 
                                   GroupName="Period" 
                                   Margin="0,0,0,5"/>
                        <RadioButton x:Name="PeriodCustom" 
                                   Content="Произвольный период" 
                                   GroupName="Period" 
                                   Margin="0,0,0,5"/>
                    </StackPanel>

                    <StackPanel x:Name="CustomPeriodPanel" 
                               Margin="0,10,0,0" 
                               Visibility="Collapsed">
                        <TextBlock Text="Начальная дата:" 
                                  FontSize="12" 
                                  Foreground="#2c3e50" 
                                  Margin="0,0,0,5"/>
                        <DatePicker x:Name="StartDatePicker" 
                                   FontSize="14" 
                                   BorderBrush="#bdc3c7" 
                                   BorderThickness="1" 
                                   Padding="8" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Конечная дата:" 
                                  FontSize="12" 
                                  Foreground="#2c3e50" 
                                  Margin="0,0,0,5"/>
                        <DatePicker x:Name="EndDatePicker" 
                                   FontSize="14" 
                                   BorderBrush="#bdc3c7" 
                                   BorderThickness="1" 
                                   Padding="8" 
                                   Margin="0,0,0,10"/>
                    </StackPanel>

                    <Separator Background="#bdc3c7" Margin="0,10,0,10"/>

                    <Button x:Name="GenerateButton" 
                           Content="Сгенерировать отчет" 
                           Background="#27ae60" 
                           Foreground="White" 
                           FontWeight="SemiBold" 
                           Height="40" 
                           BorderThickness="0" 
                           Margin="0,0,0,10"
                           Click="GenerateButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#219652"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="ExportButton" 
                           Content="📥 Экспорт в CSV" 
                           Background="#3498db" 
                           Foreground="White" 
                           FontWeight="SemiBold" 
                           Height="35" 
                           BorderThickness="0" 
                           Margin="0,0,0,10"
                           Click="ExportButton_Click"
                           IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980b9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="ExportPDFButton" 
                           Content="📄 Экспорт в PDF" 
                           Background="#9b59b6" 
                           Foreground="White" 
                           FontWeight="SemiBold" 
                           Height="35" 
                           BorderThickness="0" 
                           Click="ExportPDFButton_Click"
                           IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#8e44ad"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="White" 
                    BorderBrush="#bdc3c7" BorderThickness="1" 
                    Padding="15">
                <StackPanel>
                    <TextBlock x:Name="ReportTitle" 
                              Text="Отчет по курсам" 
                              FontSize="18" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,15"/>

                    <TextBlock x:Name="ReportInfo" 
                              Text="" 
                              FontSize="12" 
                              Foreground="#7f8c8d" 
                              Margin="0,0,0,15"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Auto" 
                                  MaxHeight="400">
                        <DataGrid x:Name="ReportDataGrid" 
                                 AutoGenerateColumns="False" 
                                 CanUserAddRows="False"
                                 IsReadOnly="True"
                                 SelectionMode="Extended"
                                 BorderBrush="#bdc3c7"
                                 BorderThickness="1">
                        </DataGrid>
                    </ScrollViewer>

                    <Border Background="#ecf0f1" 
                            Padding="10" 
                            Margin="0,15,0,0" 
                            CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="📊 Сводная статистика:" 
                                      FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#2c3e50" Margin="0,0,0,5"/>
                            <TextBlock x:Name="SummaryText" 
                                      Text="" 
                                      FontSize="12" 
                                      Foreground="#2c3e50" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#ecf0f1" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Строк в отчете: " 
                          FontSize="11" 
                          Foreground="#7f8c8d" 
                          VerticalAlignment="Center"/>
                <TextBlock x:Name="RowCountText" 
                          Text="0" 
                          FontSize="11" 
                          FontWeight="Bold" 
                          Foreground="#2c3e50" 
                          VerticalAlignment="Center" 
                          Margin="2,0,20,0"/>
                <Button x:Name="CloseButton" 
                       Content="Закрыть" 
                       Background="#3498db" 
                       Foreground="White" 
                       FontWeight="SemiBold" 
                       Width="100" 
                       Height="32" 
                       BorderThickness="0" 
                       Margin="20,0,0,0"
                       Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980b9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>