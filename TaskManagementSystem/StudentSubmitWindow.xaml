<Window x:Class="TaskManagementSystem.StudentSubmitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сдача работы" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#3498db" Padding="15,10" CornerRadius="4" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock x:Name="HeaderText" 
                          Text="Сдача работы" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TaskInfoText" 
                          Text="" 
                          FontSize="12" 
                          Foreground="#ecf0f1" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Текст ответа:" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="AnswerTextBox" 
                            FontSize="14" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1" 
                            Padding="8" 
                            Height="120" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True" 
                            VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Прикрепленные файлы:" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <Button x:Name="AddFileButton" 
                           Content="📎 Добавить файл" 
                           Background="#95a5a6" 
                           Foreground="White" 
                           FontWeight="SemiBold" 
                           Height="35" 
                           BorderThickness="0" 
                           Click="AddFileButton_Click"/>
                    <ListBox x:Name="FilesListBox" 
                            Margin="0,10,0,0" 
                            Height="80"
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Статус задания:" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <Border Background="#f5f5f5" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1" 
                            Padding="10,8">
                        <StackPanel>
                            <TextBlock x:Name="DeadlineText" 
                                      FontSize="12" 
                                      Foreground="#2c3e50"/>
                            <TextBlock x:Name="StatusText" 
                                      FontSize="12" 
                                      Foreground="#e74c3c" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton" 
                   Content="Отмена" 
                   Width="100" 
                   Height="40" 
                   Background="Transparent" 
                   Foreground="#7f8c8d" 
                   BorderBrush="#bdc3c7" 
                   BorderThickness="1" 
                   Margin="0,0,10,0"
                   Click="CancelButton_Click"/>
            <Button x:Name="SubmitButton" 
                   Content="Отправить работу" 
                   Width="150" 
                   Height="40" 
                   Background="#27ae60" 
                   Foreground="White" 
                   FontWeight="SemiBold" 
                   BorderThickness="0"
                   Click="SubmitButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#219652"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>