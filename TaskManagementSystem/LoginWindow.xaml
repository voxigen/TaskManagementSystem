<Window x:Class="TaskManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" 
        Height="700" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Grid>
        <Border Background="White" Margin="20">
            <Grid>
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#667eea" Offset="0"/>
                            <GradientStop Color="#764ba2" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <StackPanel VerticalAlignment="Center" Margin="40">
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                        <TextBlock Text="📚" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="СИСТЕМА УПРАВЛЕНИЯ ЗАДАЧАМИ" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Text="ГАПОУ «ОКЭИ»" FontSize="12" Foreground="#E0E0E0" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Border Background="White" Padding="30" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Вход в систему" FontSize="20" FontWeight="SemiBold" Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Логин" FontSize="12" Foreground="#7f8c8d" Margin="0,0,0,5"/>
                                <TextBox x:Name="LoginTextBox" FontSize="14" BorderBrush="#bdc3c7" BorderThickness="1" Padding="8"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,25">
                                <TextBlock Text="Пароль" FontSize="12" Foreground="#7f8c8d" Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <PasswordBox x:Name="PasswordBox" Grid.Column="0" FontSize="14" BorderBrush="#bdc3c7" BorderThickness="1" Padding="8">
                                        <PasswordBox.Style>
                                            <Style TargetType="PasswordBox">
                                                <Style.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter Property="BorderBrush" Value="#3498db"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </PasswordBox.Style>
                                    </PasswordBox>
                                  
                                    <Button x:Name="ManageUsersButton" Grid.Column="1" Content="👥" 
                                            Background="#667eea" Foreground="White" 
                                            FontSize="14" Width="32" Height="32" Margin="8,0,0,0"
                                            BorderThickness="0" Cursor="Hand" 
                                            Click="ManageUsersButton_Click"
                                            ToolTip="Управление пользователями (тест)">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#5a6fd8"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </StackPanel>

                            <CheckBox x:Name="RememberMeCheckBox" Content="Запомнить меня" IsChecked="True" Foreground="#2c3e50" Margin="0,0,0,25"/>

                            <Button x:Name="LoginButton" Content="ВОЙТИ В СИСТЕМУ" Background="#667eea" Foreground="White" FontWeight="SemiBold" Height="45" FontSize="14" BorderThickness="0" Cursor="Hand" Click="LoginButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#5a6fd8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <TextBlock Text="Забыли пароль?" HorizontalAlignment="Center" Foreground="#667eea" FontSize="12" Margin="0,15,0,0" Cursor="Hand" MouseDown="TextBlock_MouseDown">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="TaskManagement System v1.0" FontSize="10" Foreground="White" Opacity="0.7" HorizontalAlignment="Center"/>
                        <TextBlock Text="© 2025 ГАПОУ ОКЭИ. Все права защищены." FontSize="9" Foreground="White" Opacity="0.5" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>