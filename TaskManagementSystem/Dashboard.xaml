<Page x:Class="TaskManagementSystem.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock x:Name="WelcomeText" FontSize="18" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <TextBlock x:Name="DateText" FontSize="14" Foreground="#7f8c8d" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <TextBlock x:Name="UrgentTasksTitle" FontSize="16" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,8,0,8"/>
            <WrapPanel x:Name="UrgentTasksPanel">
            </WrapPanel>

            <TextBlock Text="📈 ПРОГРЕСС ПО КУРСАМ" FontSize="16" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,16,0,8"/>
            <Border Style="{StaticResource CardStyle}">
                <StackPanel x:Name="ProgressPanel">
                </StackPanel>
            </Border>

            <TextBlock Text="🔔 ПОСЛЕДНИЕ УВЕДОМЛЕНИЯ" FontSize="16" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,16,0,8"/>
            <Border Style="{StaticResource CardStyle}">
                <StackPanel x:Name="NotificationsPanel">
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>