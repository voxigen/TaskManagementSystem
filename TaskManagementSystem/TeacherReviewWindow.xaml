<Window x:Class="TaskManagementSystem.TeacherReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка работы" 
        Height="650" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#3498db" Padding="15,10" CornerRadius="4" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock x:Name="HeaderText" 
                              Text="Проверка работы" 
                              FontSize="18" FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock x:Name="TaskInfoText" 
                              Text="" 
                              FontSize="12" 
                              Foreground="#ecf0f1" 
                              Margin="0,2,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="PrevButton" 
                           Content="← Предыдущая" 
                           Background="#2980b9" 
                           Foreground="White" 
                           FontWeight="SemiBold" 
                           Height="30" 
                           BorderThickness="0" 
                           Margin="0,0,5,0"
                           Click="PrevButton_Click"/>
                    <Button x:Name="NextButton" 
                           Content="Следующая →" 
                           Background="#2980b9" 
                           Foreground="White" 
                           FontWeight="SemiBold" 
                           Height="30" 
                           BorderThickness="0"
                           Click="NextButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" 
                BorderBrush="#bdc3c7" 
                BorderThickness="1" 
                Padding="15"
                Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Информация о студенте:" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,10"/>

                    <Border Background="#f5f5f5" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1" 
                            Padding="10"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="StudentInfoText" 
                                      Text="" 
                                      FontSize="12"/>
                            <TextBlock x:Name="SubmitDateText" 
                                      Text="" 
                                      FontSize="11" 
                                      Foreground="#7f8c8d" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Ответ студента:" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,10"/>

                    <Border Background="#f5f5f5" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1" 
                            Padding="10"
                            Height="150"
                            Margin="0,0,0,15">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="AnswerText" 
                                      Text="" 
                                      FontSize="12" 
                                      TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>

                    <TextBlock Text="Прикрепленные файлы:" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,10"/>

                    <ListBox x:Name="FilesListBox" 
                            Height="100" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1"
                            Margin="0,0,0,15">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="📎" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding FileName}"/>
                                    <TextBlock Text=" (" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding FileSize, StringFormat={}{0} bytes}" Foreground="#7f8c8d"/>
                                    <TextBlock Text=")" Foreground="#7f8c8d"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Row="2" Background="White" 
                BorderBrush="#bdc3c7" 
                BorderThickness="1" 
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Комментарий к работе:" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,10"/>
                    <TextBox x:Name="CommentTextBox" 
                            FontSize="12" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1" 
                            Padding="8" 
                            Height="80" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True" 
                            VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock Text="Оценка:" 
                              FontSize="14" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="ScoreTextBox" 
                                FontSize="14" 
                                BorderBrush="#bdc3c7" 
                                BorderThickness="1" 
                                Padding="8" 
                                Text="0"
                                TextAlignment="Right"/>

                        <TextBlock Grid.Column="1" 
                                  Text="/10" 
                                  FontSize="14" 
                                  Foreground="#7f8c8d" 
                                  VerticalAlignment="Center" 
                                  Margin="5,0,0,0"/>
                    </Grid>

                    <TextBlock x:Name="MaxScoreText" 
                              Text="Макс. балл: 10" 
                              FontSize="11" 
                              Foreground="#7f8c8d" 
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="3" Background="#f5f5f5" 
                BorderBrush="#bdc3c7" 
                BorderThickness="1" 
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Статус проверки:" 
                          FontSize="14" FontWeight="SemiBold" 
                          Foreground="#2c3e50" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="StatusSubmitted" 
                               Content="На проверке" 
                               GroupName="Status" 
                               Margin="0,0,15,0"/>
                    <RadioButton x:Name="StatusReturned" 
                               Content="Возвращено" 
                               GroupName="Status" 
                               Margin="0,0,15,0"/>
                    <RadioButton x:Name="StatusCompleted" 
                               Content="Проверено" 
                               GroupName="Status" 
                               IsChecked="True"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" 
                   Content="Отмена" 
                   Width="100" 
                   Height="40" 
                   Background="Transparent" 
                   Foreground="#7f8c8d" 
                   BorderBrush="#bdc3c7" 
                   BorderThickness="1" 
                   Margin="0,0,10,0"
                   Click="CancelButton_Click"/>

            <Button x:Name="SaveButton" 
                   Content="Сохранить оценку" 
                   Width="150" 
                   Height="40" 
                   Background="#27ae60" 
                   Foreground="White" 
                   FontWeight="SemiBold" 
                   BorderThickness="0"
                   Click="SaveButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#219652"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>