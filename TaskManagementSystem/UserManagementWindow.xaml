<Window x:Class="TaskManagementSystem.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление пользователями (Тестовый режим)" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

      
        <Border Background="#2c3e50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="👥 Управление пользователями" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Тестовый режим - для проверки авторизации" 
                          FontSize="11" Foreground="#bdc3c7" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

     
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            
            <Border Grid.Column="0" Background="White" 
                    BorderBrush="#bdc3c7" BorderThickness="1" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Список пользователей" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,15"/>

                    <DataGrid x:Name="UsersDataGrid" 
                             AutoGenerateColumns="False" 
                             CanUserAddRows="False"
                             IsReadOnly="True"
                             SelectionMode="Single"
                             BorderBrush="#bdc3c7"
                             BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="120"/>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                            <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

           
            <Border Grid.Column="2" Background="White" 
                    BorderBrush="#bdc3c7" BorderThickness="1" 
                    Padding="15">

                <StackPanel>
                    
                        
                    
                    <TextBlock Text="Добавить пользователя" 
                              FontSize="16" FontWeight="SemiBold" 
                              Foreground="#2c3e50" Margin="0,0,0,15"/>

                   
                    <StackPanel>
                        <TextBlock Text="Логин:" FontSize="12" 
                                  Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <TextBox x:Name="NewLoginTextBox" 
                                FontSize="14" 
                                BorderBrush="#bdc3c7" 
                                BorderThickness="1" 
                                Padding="8" 
                                Margin="0,0,0,10"/>

                        <TextBlock Text="Пароль:" FontSize="12" 
                                  Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="NewPasswordBox" 
                                    FontSize="14" 
                                    BorderBrush="#bdc3c7" 
                                    BorderThickness="1" 
                                    Padding="8" 
                                    Margin="0,0,0,10"/>

                        <TextBlock Text="ФИО:" FontSize="12" 
                                  Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <TextBox x:Name="NewFullNameTextBox" 
                                FontSize="14" 
                                BorderBrush="#bdc3c7" 
                                BorderThickness="1" 
                                Padding="8" 
                                Margin="0,0,0,10"/>

                        <TextBlock Text="Email:" FontSize="12" 
                                  Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <TextBox x:Name="NewEmailTextBox" 
                                FontSize="14" 
                                BorderBrush="#bdc3c7" 
                                BorderThickness="1" 
                                Padding="8" 
                                Margin="0,0,0,10"/>

                        <TextBlock Text="Роль:" FontSize="12" 
                                  Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <ComboBox x:Name="NewRoleComboBox" 
                                 FontSize="14" 
                                 BorderBrush="#bdc3c7" 
                                 BorderThickness="1" 
                                 Padding="8" 
                                 Margin="0,0,0,15">
                            <ComboBoxItem Content="Student" IsSelected="True"/>
                            <ComboBoxItem Content="Teacher"/>
                            <ComboBoxItem Content="Administrator"/>
                        </ComboBox>

                        
                        <StackPanel x:Name="StudentFields" 
                                   Margin="0,0,0,10">
                            <TextBlock Text="Группа (для студента):" 
                                      FontSize="12" 
                                      Foreground="#2c3e50" Margin="0,0,0,5"/>
                            <TextBox x:Name="NewGroupTextBox" 
                                    FontSize="14" 
                                    BorderBrush="#bdc3c7" 
                                    BorderThickness="1" 
                                    Padding="8"/>
                        </StackPanel>

                        <StackPanel x:Name="TeacherFields" 
                                   Margin="0,0,0,10" 
                                   Visibility="Collapsed">
                            <TextBlock Text="Отделение (для преподавателя):" 
                                      FontSize="12" 
                                      Foreground="#2c3e50" Margin="0,0,0,5"/>
                            <TextBox x:Name="NewDepartmentTextBox" 
                                    FontSize="14" 
                                    BorderBrush="#bdc3c7" 
                                    BorderThickness="1" 
                                    Padding="8"/>
                        </StackPanel>

                        <Button x:Name="AddUserButton" 
                               Content="Добавить пользователя" 
                               Background="#27ae60" 
                               Foreground="White" 
                               FontWeight="SemiBold" 
                               Height="40" 
                               BorderThickness="0" 
                               Margin="0,10,0,20"
                               Click="AddUserButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#219652"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Separator Background="#bdc3c7" Margin="0,0,0,20"/>

                      
                        <TextBlock Text="Удалить пользователя" 
                                  FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#2c3e50" Margin="0,0,0,15"/>

                        <TextBlock Text="Выберите пользователя в списке слева, затем нажмите кнопку ниже для удаления" 
                                  FontSize="11" 
                                  Foreground="#7f8c8d" 
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,10"/>

                        <Button x:Name="DeleteUserButton" 
                               Content="Удалить выбранного пользователя" 
                               Background="#e74c3c" 
                               Foreground="White" 
                               FontWeight="SemiBold" 
                               Height="40" 
                               BorderThickness="0"
                               Click="DeleteUserButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#c0392b"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

      
        <Border Grid.Row="2" Background="#ecf0f1" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
               
                <Button x:Name="CloseButton" 
                       Content="Закрыть" 
                       Background="#3498db" 
                       Foreground="White" 
                       FontWeight="SemiBold" 
                       Width="100" 
                       Height="32" 
                       BorderThickness="0" 
                       Margin="20,0,0,0"
                       Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980b9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>