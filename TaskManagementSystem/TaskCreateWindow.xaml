<Window x:Class="TaskManagementSystem.TaskCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание нового задания" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

   
        <Border Background="#3498db" Padding="15,10" CornerRadius="4" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Создание нового задания" 
                          FontSize="18" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TeacherInfoText" 
                          Text="" 
                          FontSize="12" 
                          Foreground="#ecf0f1" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

      
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
               
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Курс *" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <ComboBox x:Name="CourseComboBox" 
                             FontSize="14" 
                             BorderBrush="#bdc3c7" 
                             BorderThickness="1" 
                             Padding="8"
                             DisplayMemberPath="Title"/>
                </StackPanel>

               
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Название задания *" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="TitleTextBox" 
                            FontSize="14" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1" 
                            Padding="8"/>
                </StackPanel>

                
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Описание задания" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="DescriptionTextBox" 
                            FontSize="14" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1" 
                            Padding="8" 
                            Height="100" 
                            TextWrapping="Wrap" 
                            AcceptsReturn="True" 
                            VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

               
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Срок выполнения *" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <DatePicker x:Name="DeadlineDatePicker" 
                               FontSize="14" 
                               BorderBrush="#bdc3c7" 
                               BorderThickness="1" 
                               Padding="8"/>
                </StackPanel>

              
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Максимальный балл" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="MaxScoreTextBox" 
                            FontSize="14" 
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1" 
                            Padding="8"
                            Text="10"/>
                </StackPanel>

              
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Прикрепленные файлы" 
                              FontSize="12" 
                              Foreground="#2c3e50" 
                              Margin="0,0,0,5"/>
                    <Button x:Name="AddFileButton" 
                           Content="📎 Прикрепить файл" 
                           Background="#95a5a6" 
                           Foreground="White" 
                           FontWeight="SemiBold" 
                           Height="35" 
                           BorderThickness="0" 
                           Click="AddFileButton_Click"/>
                    <ListBox x:Name="FilesListBox" 
                            Margin="0,10,0,0" 
                            Height="80"
                            BorderBrush="#bdc3c7" 
                            BorderThickness="1"/>
                </StackPanel>

                <TextBlock Text="* - обязательные поля" 
                          FontSize="11" 
                          Foreground="#e74c3c" 
                          Margin="0,0,0,20"/>
            </StackPanel>
        </ScrollViewer>

       
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton" 
                   Content="Отмена" 
                   Width="100" 
                   Height="40" 
                   Background="Transparent" 
                   Foreground="#7f8c8d" 
                   BorderBrush="#bdc3c7" 
                   BorderThickness="1" 
                   Margin="0,0,10,0"
                   Click="CancelButton_Click"
                   Cursor="Hand"/>

            <Button x:Name="SaveButton" 
                   Content="Создать задание" 
                   Width="150" 
                   Height="40" 
                   Background="#27ae60" 
                   Foreground="White" 
                   FontWeight="SemiBold" 
                   BorderThickness="0"
                   Click="SaveButton_Click"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#219652"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>