<Page x:Class="TaskManagementSystem.CoursesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мои курсы">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Мои курсы" FontSize="20" FontWeight="SemiBold" Foreground="#2c3e50" VerticalAlignment="Center"/>

                    <TextBox x:Name="SearchBox" Grid.Column="1"  Width="200" Height="32" 
                            Padding="8,4" BorderBrush="#bdc3c7" BorderThickness="1" Margin="8,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#3498db"/>
                                        <Setter Property="Text" Value=""/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <ComboBox Grid.Column="2" Width="120" Height="32" SelectedIndex="0">
                        <ComboBoxItem Content="Все курсы"/>
                        <ComboBoxItem Content="Активные"/>
                        <ComboBoxItem Content="Завершенные"/>
                    </ComboBox>
                </Grid>
            </Border>
            <ItemsControl x:Name="CoursesItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16" 
                                Background="{Binding CardBackground}" Cursor="Hand"
                                MouseLeftButtonUp="CourseCard_MouseLeftButtonUp">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding CourseName}" FontSize="16" FontWeight="SemiBold" Foreground="#2c3e50"/>
                                    <TextBlock Text="{Binding Instructor}" FontSize="14" Foreground="#7f8c8d" Margin="0,4,0,0"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <TextBlock Text="📅" FontSize="12" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding NextAssignment}" FontSize="12" Foreground="#2c3e50"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,8,0,0">
                                        <Grid>
                                            <TextBlock Text="📊 Прогресс:" FontSize="12" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ProgressText}" FontSize="12" Foreground="#7f8c8d" HorizontalAlignment="Right"/>
                                        </Grid>
                                        <Border Background="#ecf0f1" Height="6" Margin="0,4,0,0">
                                            <Border Background="{Binding ProgressColor}" Height="6" Width="{Binding ProgressWidth}"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <Button Grid.Column="1" Content="Перейти к курсу" Background="#3498db" Foreground="White" 
                                       FontWeight="SemiBold" Padding="12,6" BorderThickness="0" VerticalAlignment="Center"
                                       Click="GoToCourse_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2980b9"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border x:Name="NoCoursesMessage" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                    <TextBlock Text="📚" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="Курсы не найдены" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="У вас пока нет активных курсов или они не соответствуют критериям поиска" 
                              FontSize="12" Foreground="#7f8c8d" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>