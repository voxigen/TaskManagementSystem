<Window x:Class="TaskManagementSystem.CourseTeachersManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление преподавателями курса" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Управление преподавателями курса" 
                  FontSize="18" FontWeight="Bold" 
                  Foreground="#2c3e50" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Доступные преподаватели:" 
                          FontSize="14" FontWeight="SemiBold" 
                          Foreground="#2c3e50" Margin="0,0,0,5"/>
                <TextBlock x:Name="AvailableCountText" 
                          Text="" FontSize="11" 
                          Foreground="#7f8c8d" Margin="0,0,0,10"/>
                <ListBox x:Name="AvailableTeachersListBox" 
                        Height="350" 
                        BorderBrush="#bdc3c7" 
                        BorderThickness="1"
                        DisplayMemberPath="FullName"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0">
                <Button x:Name="AddTeacherButton" 
                       Content="→" 
                       Width="60" Height="35" 
                       Background="#27ae60" 
                       Foreground="White"
                       FontWeight="Bold" 
                       Margin="0,0,0,10"
                       Click="AddTeacherButton_Click"/>
                <Button x:Name="RemoveTeacherButton" 
                       Content="←" 
                       Width="60" Height="35" 
                       Background="#e74c3c" 
                       Foreground="White"
                       FontWeight="Bold" 
                       Margin="0,0,0,10"
                       Click="RemoveTeacherButton_Click"/>
                <Button x:Name="AddAllButton" 
                       Content="→→" 
                       Width="60" Height="35" 
                       Background="#3498db" 
                       Foreground="White"
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"
                       Click="AddAllButton_Click"/>
                <Button x:Name="RemoveAllButton" 
                       Content="←←" 
                       Width="60" Height="35" 
                       Background="#e74c3c" 
                       Foreground="White"
                       FontWeight="SemiBold" 
                       Click="RemoveAllButton_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Назначенные преподаватели:" 
                          FontSize="14" FontWeight="SemiBold" 
                          Foreground="#2c3e50" Margin="0,0,0,5"/>
                <TextBlock x:Name="EnrolledCountText" 
                          Text="" FontSize="11" 
                          Foreground="#7f8c8d" Margin="0,0,0,10"/>
                <ListBox x:Name="EnrolledTeachersListBox" 
                        Height="350" 
                        BorderBrush="#bdc3c7" 
                        BorderThickness="1"
                        DisplayMemberPath="FullName"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton" 
                   Content="Отмена" 
                   Width="100" Height="35" 
                   Background="Transparent" 
                   Foreground="#7f8c8d" 
                   BorderBrush="#bdc3c7" 
                   BorderThickness="1" 
                   Margin="0,0,10,0"
                   Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" 
                   Content="Сохранить" 
                   Width="100" Height="35" 
                   Background="#27ae60" 
                   Foreground="White" 
                   FontWeight="SemiBold" 
                   BorderThickness="0"
                   Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>